<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:id="@+id/fragment_location_detail"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:id="@+id/location_detail_store_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/location_image_placeholder"
        android:layout_weight="2"
        tools:layout_marginTop="5dp"
        android:padding="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|right">

        <TextView
            android:id="@+id/location_detail_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_weight="0.1"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="@string/location_name_placeholder"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left">

        <TextView
            android:id="@+id/location_detail_city_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="3"
            android:text="@string/location_city_placeholder"
            />
        <TextView
            android:id="@+id/location_detail_state_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="@string/location_state_placeholder"
            />
        <TextView
            android:id="@+id/location_detail_zipcode_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="@string/location_zipcode_placeholder"
            />

    </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/location_detail_mapview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"/>

    </LinearLayout>
</LinearLayout>