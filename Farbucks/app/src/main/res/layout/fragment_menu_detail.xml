<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:id="@+id/fragment_menu_detail"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:id="@+id/menu_detail_menuitem_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/location_image_placeholder"
        android:layout_weight="3"
        tools:layout_marginTop="5dp"
        android:padding="0dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/menu_detail_name_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/menu_detail_category_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/menu_detail_price_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/menu_detail_price2_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/menu_detail_price3_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
</LinearLayout>